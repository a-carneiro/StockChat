<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/main.css">


    <title>StockChatApp</title>
</head>

<body>
    <div class="w3-black">
        <nav class="w3-sidebar w3-bar-block w3-small w3-hide-small w3-center">
            @if (User.Identity.IsAuthenticated)
            {
                <a href="/" class="w3-bar-item w3-button w3-black w3-padding-large w3-black">
                    <i class="fa fa-home w3-xxlarge"></i>
                    <p>Home</p>
                </a>

                <form asp-controller="Account" asp-action="Logout">
                    <button class="w3-bar-item w3-button w3-black w3-padding-large" type="submit">
                        <i class="fa fa-user w3-large"></i>
                        <p>Logout</p>
                    </button>
                </form>

                <button onclick="document.getElementById('createRoomModal').style.display='block'" class="w3-button w3-black">
                    <i class="fa fa-plus w3-xxlarge"></i>
                    <p>Create Room</p>
                </button>

                <vc:room></vc:room>
            }
        </nav>
    </div>
    <div class="w3-padding-small" id="main">
        @RenderBody()
    </div>

    <div id="createRoomModal" class="w3-modal">
        <div class="w3-modal-content">
            <div class="w3-container">
                <form asp-action="CreateRoon" asp-controller="Home" class="w3-container">
                    <div class="w3-section">
                        <label><b>Chat Name (maxlength = 10)</b></label>
                        <input class="w3-input w3-border w3-margin-bottom" type="text" placeholder="Enter Username" name="name" maxlength="10" required>
                        <button class="w3-button w3-block w3-green w3-section w3-padding">Create</button>
                        @*<--><input class="w3-check w3-margin-top" type="checkbox" checked="checked"> Remember me</-->*@
                    </div>
                </form>

                <div class="w3-container w3-border-top w3-padding-16 w3-light-grey">
                    <button onclick="document.getElementById('createRoomModal').style.display='none'" type="button" class="w3-button w3-red">Cancel</button>
                </div>
            </div>
        </div>
    </div>

    @RenderSection("Scripts", false)
</body>
</html>